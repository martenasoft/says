<div class="card mb-3" >
    <div class="row g-0">
        <div class="col-md-4">
            {% if page.image is not empty %}
                {{  include ('page/_page_url.html.twig', {item: page, type: 'image'}) }}
            {% endif %}
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">  {{ include ('page/_page_url.html.twig', {item: page}) }}</h5>
                <p class="card-text">  {{ page.preview|raw }} </p>
                <p class="card-text"><small class="text-body-secondary"> {{ include ('page/_page_url.html.twig', {item: page, link_text: 'More ...'}) }}</small></p>
            </div>
            </div>
        </div>
    </div>
</div>