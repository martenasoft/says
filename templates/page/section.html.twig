{% extends 'base.html.twig' %}

{% block title %}{{ page.name }}{% endblock %}
{% block h1 %}{{ page.name }}{% endblock %}

{% block body %}
    <div class="page-show">
    {{ include('page/section_element_without_links.html.twig') }}

    {% for pageItem in pagination %}
        {{ include('page/section_item.html.twig', {page: pageItem}) }}
    {% else %}

        {{ include('elements/no_records_founds.html.twig') }}
    {% endfor %}
    </div>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    {{ page.body|raw }}
    </div>

{% endblock %}