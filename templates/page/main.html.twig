{% extends 'base.html.twig' %}

{% block title %}{{ page.name ?? '' }}{% endblock %}
{% block h1 %}{{ page.name ?? '' }}{% endblock %}

{% block body %}
    <div>
        {% for item in items %}
            {{ include('page/section_item.html.twig', {page: item}) }}
        {% endfor %}

        {% if page.body is defined %}
            {% if page.image is not empty %}
                <img src="{{ image_public }}/{{ constant('App\\Entity\\Page::PATH')[constant('App\\Entity\\Page::BIG_IMAGE_TYPE')] }}/{{ page.image }}"
                     alt="{{ page.name }}">
                {{ page.body|raw }}
            {% endif %}
        {% endif %}
    </div>
{% endblock %}