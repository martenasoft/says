<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}

        {% endblock %}
    </head>
    <body>

    <div class="container">

        <!-- Горизонтальное меню -->
        <div class="horizontal-menu">
            <a href="#">Главная</a>
            <a href="#">О нас</a>
            <a href="#">Контакты</a>
            <div class="user-name">
                {% if app.user is not null %}
                <a href="#">{{ app.user.email}}</a>
                <a href="{{ path('app_logout') }}">Logout</a>
                {% else %}
                    <a href="{{ path('app_login') }}">Login</a>
                    <a href="{{ path('app_register') }}">Registration</a>
                {% endif %}
            </div>

        </div>

        <!-- Вертикальное древовидное меню -->
        <div class="vertical-menu">
            <a href="#">Пункт 1</a>
            <a href="#">Пункт 2</a>
            <a href="#">Пункт 3</a>
            <a href="#">Пункт 4</a>
        </div>

        <!-- Баннер -->


        <!-- Контентная часть -->
        <div class="content">
            <div class="banner centered-block">
                <h2>Здесь ваш баннер</h2>
            </div>

            {% include 'elements/flush.html.twig' %}

            {% block body %}{% endblock %}
        </div>

        <!-- Футер -->
        <div class="footer">
            <p>Здесь ваш футер</p>
        </div>

    </div>

    </body>
</html>
