{% extends 'base.html.twig' %}

{% block title %}{{ 'User' | trans }} {{ 'index' | trans }}{% endblock %}
{% block h1 %}{{ 'User' | trans }} {{ 'index' | trans }}{% endblock %}

{% block body %}
    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Id' | trans }}</th>
                <th>{{ 'Email' | trans }}</th>
                <th>{{ 'Roles' | trans }}</th>
                <th>{{ 'Status' | trans }}</th>

                <th>{{ 'Is Verified' | trans }}</th>
                <th>{{ 'actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in pagination %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="text-center">{{ constant('App\\Entity\\User::STATUSES')[user.status] ?? '' }}
                    {{ user.password is empty ? 'Empty password!' }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_user_profile', {'id': user.id}) }}">{{ 'Show' | trans }}</a>
                    <a href="{{ path('app_user_admin_edit', {'id': user.id}) }}">{{ 'Edit' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6"{{ include('elements/no_records_founds.html.twig') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_admin_new') }}">{{ 'Create new' | trans }}</a>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
