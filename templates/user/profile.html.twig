{% extends 'base.html.twig' %}

{% block title %}{{ 'User' | trans }}{% endblock %}
{% block h1 %}{{ 'User' | trans }}{% endblock %}

{% block body %}

    {{ include('user/tabs.html.twig', ({items: [
        {'route' : 'app_user_profile', 'params': {'id': user.id}, 'title': 'Default'},
        {'route' : 'app_user_profile_change_password', 'params': {'id': user.id}, 'title': 'Security'},

    ]})) }}
    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'Id' | trans }}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Email' | trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ 'Roles' | trans }}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>

            <tr>
                <th>{{ 'Is Verified' | trans }}</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
