{% extends 'base.html.twig' %}

{% block title %}{{ 'Role' | trans }} {{ 'index' | trans  }}{% endblock %}
{% block h1 %}{{ 'Role' | trans }} {{ 'index' | trans  }}{% endblock %}

{% block body %}
    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Id' | trans }}</th>
                <th>{{ 'Name' | trans }}</th>
                <th>{{ 'actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for role in pagination %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.name }}</td>
                <td>
                    <a href="{{ path('app_role_admin_show', {'id': role.id}) }}">{{ 'Show' | trans }}</a>
                    <a href="{{ path('app_role_admin_edit', {'id': role.id}) }}">{{ 'Edit' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ include('elements/no_records_founds.html.twig') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_role_admin_new') }}">{{ 'Create new' | trans }}</a>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
